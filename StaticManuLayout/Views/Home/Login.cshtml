@model StaticManuLayout.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/LayoutDesign.styles.css" asp-append-version="true" />
<link rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css'>
<style>
    .IndexDiv {
        position: fixed;
        background: linear-gradient(to right,#C4E0E0,#C4E0F9);
        top: 8%;
        left: 0;
        min-height: 81%;
        min-width: 100%;
        margin-top: -50px;
    }

    .CenteredContainer {
        position: absolute;
        transform: translate(-50%,-50%);
        top: 50%;
        left: 50%;
    }

        .CenteredContainer form {
            background: linear-gradient(to left,#28347d,#19767D);
            padding: 3em;
            border-radius: 20px;
        }

            .CenteredContainer form a {
                text-decoration: none;
                color: white;
                font-size: 15px;
            }

                .CenteredContainer form a:hover {
                    text-shadow: 2px 2px 6px #000040;
                }

            .CenteredContainer form input {
                border-radius: 20px;
            }

            .CenteredContainer form .btn {
                width: 150px;
                font-size: 1em;
            }

        .CenteredContainer a, input:focus, submit:focus, button:focus {
            outline: none;
            margin: 2px;
        }
</style>

@{
    string menuTextColor = "text-white";
}

<div class="container IndexDiv" style="height:100%; margin-bottom:0;">
    <div class="row bg-dark @menuTextColor">
        <div class="col-md-2 text-left">
            <img src="~/image/download.png" height="50px;" width="50px;" style="border-radius:50px; margin-right:150px; margin-top:15px;" />
        </div>
        <div class="text-center col-md-8">
            <p><h1>ITL License & Support Management</h1></p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 CenteredContainer text-center" style="font-size:11px; margin-top:50px;">
            <section>
                <form id="account" method="post">
                    <h2 class="fw-bold mb-2 text-uppercase @menuTextColor">Login</h2>
                    <p class="text-white-50 mb-2 mt-1 @menuTextColor">Please enter your username and password!</p>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div> 
                    <div class="form-group">
                        <input asp-for="Email" class="form-control mb-0" autocomplete="username" aria-required="true" placeholder="Please enter your username" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input asp-for="Password" type="password" class="form-control mb-0" autocomplete="current-password" aria-required="true" placeholder="Please enter your password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" class="btn btn-danger text-white mb-0" value="Log in">
                    </div>
                    <br />
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" href="#">Forgot your password?</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
